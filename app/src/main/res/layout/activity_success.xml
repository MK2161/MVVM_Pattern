<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.success.SuccessActivity">
   <androidx.appcompat.widget.AppCompatTextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/uiTvSuccess"
       android:text="Successfully Your Password Changed"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:textSize="25dp"
       android:layout_marginTop="150dp"
       android:textAlignment="center"/>
   <androidx.appcompat.widget.AppCompatButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/uiBtnSignIn"
       android:text="@string/str_sign_in"
       android:textColor="@color/white"
       android:textSize="20dp"
       android:backgroundTint="@color/purple_700"
       app:layout_constraintTop_toBottomOf="@+id/uiTvSuccess"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="30dp"/>
   <androidx.appcompat.widget.AppCompatImageView
       android:id="@+id/uiIvBack"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="25dp"
       android:layout_marginTop="30dp"
       android:src="@drawable/ic_cancel_small"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>